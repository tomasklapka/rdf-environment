{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "es5",
            "es2015",
            "es6",
            "dom",
            "es2017"
        ],
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "allowJs": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/index.d.ts"
    ]
}
